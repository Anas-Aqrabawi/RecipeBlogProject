@model IEnumerable<RecipeBlogProject.Models.Recipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Recipes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><span class="text">Add New Recipe</span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Receipename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isapproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chef)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Receipename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isapproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chef.Chefid)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Recipeid"><span class="text">Edit</span></a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Recipeid"><span class="text">Details</span></a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Recipeid"><span class="text">Delete</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
