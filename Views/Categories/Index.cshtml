@model IEnumerable<RecipeBlogProject.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Recipe Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><span class="text">Add New Category</span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoryname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoryname)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.id"><span class="text">Edit</span></a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.id"><span class="text">Details</span></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id"><span class="text">Delete</span></a>
      
            </td>
        </tr>
}
    </tbody>
</table>
