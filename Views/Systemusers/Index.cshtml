@model IEnumerable<RecipeBlogProject.Models.Systemuser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Registered Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.id"><span class="text">Edit</span></a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.id"><span class="text">Details</span></a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id"><span class="text">Delete</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
