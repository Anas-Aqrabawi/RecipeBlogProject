@{
    Layout = "~/views/shared/_ChefLayout.cshtml";
}

<h1> Tables </h1>

<!-- Categories Table -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Categories</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in ViewBag.categories)
                    {
                        <tr>
                            <td> @item.Categoryname</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Recipes Table -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Recipes</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Recipe Name</th>
                       <th>Prices</th>
                       <th>Ingredients</th>
                       <th>Is Approved</th>
                       <th>Chef Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.recipes)
                    {
                        <tr>
                            <td> @item.Receipename</td>
                            <td> @item.Price$</td>
                            <td> @item.Ingredients</td>
                            <td> @item.Isapproved</td>
                            <td> @item.ChefId</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

